<div class="card shadow-sm">
  <div class="card-body">
    <%= form_with(model: post, local: true, class: "needs-validation") do |form| %>
      <% if post.errors.any? %>
        <div class="alert alert-danger">
          <h5 class="alert-heading">
            <i class="bi bi-exclamation-triangle"></i>
            <%= pluralize(post.errors.count, "erro") %> impediram o salvamento:
          </h5>
          <ul class="mb-0">
            <% post.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

  <div class="card shadow-sm">
    <div class="card-body">
      <div class="mb-4">
        <%= form.label :image, "Foto", class: "form-label fw-bold" %>
        <div class="input-group">
          <span class="input-group-text">
            <i class="bi bi-camera"></i>
          </span>
          <%= form.file_field :image, 
              accept: "image/*",
              class: "form-control",
              data: { 
                bs_toggle: "tooltip",
                bs_placement: "top"
              },
              title: "Escolha uma imagem para seu post" %>
        </div>
      </div>

      <div class="mb-4">
        <%= form.label :caption, "Legenda", class: "form-label fw-bold" %>
        <div class="input-group">
          <span class="input-group-text">
            <i class="bi bi-chat-quote"></i>
          </span>
          <%= form.text_area :caption,
              rows: 4,
              class: "form-control",
              placeholder: "Escreva uma legenda incrÃ­vel para sua foto..." %>
        </div>
      </div>

      <div class="d-flex gap-2">
        <%= form.submit "Salvar", class: "btn btn-primary" %>
        <%= link_to "Voltar", posts_path, class: "btn btn-outline-secondary" %>
      </div>
    </div>
  </div>  <div class="actions" style="margin-top: 1rem;">
    <%= form.submit %>
  </div>
<% end %>

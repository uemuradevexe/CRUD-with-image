<p><%= link_to "Voltar", posts_path %></p>

<% if @post.image.attached? %>
  <%= image_tag url_for(@post.image.variant(resize_to_limit: [1000, 1000])) %>
<% end %>

<div style="margin-top: 12px; white-space: pre-wrap;">
  <%= @post.caption %>
</div>

<div style="margin-top: 12px; display:flex; gap:8px;">
  <%= link_to "Editar", edit_post_path(@post) %>
  <%= link_to "Apagar", @post, data: { turbo_method: :delete, turbo_confirm: "Apagar mesmo?" } %>
</div>
